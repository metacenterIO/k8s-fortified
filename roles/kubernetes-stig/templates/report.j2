---
{% if msg is defined %}

{% for item in msg.resources %}

STIG name: {{ item.metadata.name }}
Status: 
{%- if item.status.conditions is defined %}
  {%- for cond in item.status.conditions %}
    {%+ if cond.type == 'Complete' -%}
       Success
    {% else -%}
       Failed - Reason: {{ cond.reason }}
    {% endif %}
  {% endfor %}
{% endif %}
{%- if item.status.active is defined %}
   Inprogress - Execute 'ansible-playbook check-kubernetes-stig-compliance.yml --tags "result"' to update report.
{% endif %}

{% endfor %}

{% endif %}